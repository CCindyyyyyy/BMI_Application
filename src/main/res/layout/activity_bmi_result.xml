<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/lightblack">

    <TextView
        android:id="@+id/TitleofBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="BMI Calculator"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/bmiresultLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/yourresultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:fontFamily="@font/notosans"
            android:textColor="@color/white"
            android:text="Your Body Mass Weight :"
            android:padding="20dp"/>

        <TextView
            android:id="@+id/bmiResultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:fontFamily="@font/notosans"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/bmiCategoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="@font/notosans"
            android:textColor="@color/white"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/bmiCategoryImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:padding="30dp"/>
    </LinearLayout>

    <!-- Horizontal layout for age, gender, height, weight -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:fontFamily="@font/notosans"
            android:textColor="@color/white"
            android:text="Age"
            android:layout_marginEnd="16dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:fontFamily="@font/notosans"
            android:textColor="@color/white"
            android:text="Gender"
            android:layout_marginEnd="16dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15sp"
            android:fontFamily="@font/notosans"
            android:textColor="@color/white"
            android:text="Height"
            android:layout_marginEnd="16dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:fontFamily="@font/notosans"
            android:textColor="@color/white"
            android:text="Weight"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="10dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/ageTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/notosans"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners"
            android:padding="5dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/genderTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/notosans"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners"
            android:padding="5dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/heightTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/notosans"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp"
            android:layout_weight="2"
            android:background="@drawable/rounded_corners"
            android:padding="5dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/weightTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/notosans"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners"
            android:padding="5dp"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_gravity="center"/>
</LinearLayout>